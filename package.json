{
	"name": "sp-tools",
	"displayName": "SPTools",
	"description": "Tools helping SharePoint development using VS Code",
	"version": "0.0.8",
	"publisher": "Mike",
	"keywords": ["sharepoint", "o365", "tools"],
	"engines": {
		"vscode": "0.10.x"
	},
    "galleryBanner": {
        "color": "#0668b3",
        "theme": "dark"
    },
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:sp.connect",
		"workspaceContains:spconfig.json"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "sp.connect",
				"category": "SPTools",
				"title": "Init",
				"description": "Initialize and sync a SharePoint workspace"
			},
			{
				"command": "sp.date",
				"category": "SPTools",
				"title": "Check file freshness",
				"description": "Compare remote and local last modified dates"
			},
			{
				"command": "sp.sync",
				"category": "SPTools",
				"title": "Sync file",
				"description": "Sync current file"
			},
			{
				"command": "sp.upload",
				"category": "SPTools",
				"title": "Upload file",
				"description": "Upload current file"
			},
			{
				"command": "sp.checkin",
				"category": "SPTools",
				"title": "Check in file",
				"description": "Check in current file"
			},
			{
				"command": "sp.checkout",
				"category": "SPTools",
				"title": "Check out file",
				"description": "Check out current file"
			},
			{
				"command": "sp.discard",
				"category": "SPTools",
				"title": "Discard file check out",
				"description": "Discard current file check out (use with caution)"
			},
			{
				"command": "sp.refresh",
				"category": "SPTools",
				"title": "Sync entire workspace",
				"description": "Sync entire workspace (use with caution)"
			},
			{
				"command": "sp.credentials.reset",
				"category": "SPTools",
				"title": "Reset credentials cache",
				"description": "Delete all saved credentials (use with caution)"
			}
		],
		"configuration": {
			"type": "object",
			"title": "SPTools configuration",
			"properties": {
				"sptools.workFolder": {
					"type": "string",
					"default": "c:\\\\work\\\\",
					"description": "Path to your top level work folder"
				},
				"sptools.spFolders": {
					"type": "array",
					"default": [
						"/_catalogs/masterpage/sptools",
						"/style library/en-us/themable/sptools"
					],
					"description": "Folders to be fetched from SharePoint sites"
				},
				"sptools.storeCredentials": {
					"type": "boolean",
					"default": true,
					"description": "Set to false if you don't want credentials to be stored"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"vscode": "0.10.x"
	},
	"dependencies": {
		"constants": "0.0.2",
		"cookie": "0.2.3",
		"fs": "0.0.2",
		"https": "1.0.0",
		"simple-git": "1.11.0"
	}
}